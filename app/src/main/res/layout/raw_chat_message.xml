<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_4sdp"
    android:paddingEnd="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/linear_recived_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/round_chip_whites"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_2sdp">

            <TextView
                android:id="@+id/txt_recived_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/dummytext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_6ssp"
                android:layout_gravity="bottom|right"
                android:text="10:50 AM"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_minus15sdp"
            android:background="@drawable/round_chip_red"
            android:gravity="center"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/muser"

                />



        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_receivepic_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:srcCompat="@drawable/dummy_profile" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_weight="1"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:scaleType="fitXY"
                android:src="@drawable/imgshare" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"

                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_6sdp">

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/_2sdp"
                    android:text="5:20 PM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:padding="@dimen/_1sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_check_black" />

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_sent_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="end"
        android:orientation="vertical">




            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="1"
                android:background="@drawable/round_chip_color"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp">

                <TextView
                    android:id="@+id/txt_sent_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:paddingStart="@dimen/_10ssp"
                    android:text="@string/dummytext"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:textSize="@dimen/_6ssp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="10:50 AM"/>


            </FrameLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/_minus15sdp"
            android:background="@drawable/round_chip_black"
            android:gravity="center"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/m2user"
                />



        </LinearLayout>


    </LinearLayout>




</LinearLayout>